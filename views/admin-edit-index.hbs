      <main class="content">
        <div class="form">
        <h2>Edit Account</h2>
          <label for="update-email">Update email</label>
          <form action="/db/update-email-admin" method="post" class="update">
            <input
              type="email"
              name="update-email"
              maxlength="100"
              placeholder="Enter your new email"
              required
            />
            <input
              type="password"
              name="password"
              maxlength="25"
              placeholder="Enter your password"
              required
            />
            <input type="submit" class="submit" value="Update" name="submit-email" />
          </form>
          <p id="update-email-message" style="display:none">{{#if updateEmailMessage}}
            {{updateEmailMessage}}
            {{/if}}</p>
          <script>
            let updateEmailMessage = document.getElementById("update-email-message").innerHTML;
            if(updateEmailMessage !== ""){
              window.alert(updateEmailMessage);
            }
          </script>
          
          <label for="update-username">Update username</label>
          <form action="/db/update-username-admin" method="post" class="update">
            <input
              type="text"
              name="update-username"
              maxlength="25"
              placeholder="Enter your new username"
              required
            />
            <input
              type="password"
              name="password"
              maxlength="25"
              placeholder="Enter your password"
              required
            />
            <input type="submit" class="submit" value="Update" name="submit-username" />
          </form>
          <p id="update-username-message" style="display:none">{{#if updateUsernameMessage}}
            {{updateUsernameMessage}}
            {{/if}}</p>
          <script>
            let updateUsernameMessage = document.getElementById("update-username-message").innerHTML;
            if(updateUsernameMessage !== ""){
              window.alert(updateUsernameMessage);
            }
          </script>

          <label for="new-password">Update password</label>
          <form action="/db/update-password-admin" method="post" class="update">
            <input
              type="password"
              name="password"
              maxlength="25"
              placeholder="Enter your current password"
              required
            />
            <input
              type="password"
              name="new-password"
              maxlength="25"
              placeholder="Enter your new password"
              required
            />
            <input
              type="password"
              name="confirm-password"
              maxlength="25"
              placeholder="Confirm new password"
              required
            />
            <input
              class="submit"
              type="submit"
              value="Update"
              name="submit-password"
            />
          </form>
          <p id="update-password-message" style="display:none">{{#if updatePasswordMessage}}
            {{updatePasswordMessage}}
            {{/if}}</p>
          <script>
            let updatePasswordMessage = document.getElementById("update-password-message").innerHTML;
            if(updatePasswordMessage !== ""){
              window.alert(updatePasswordMessage);
            }
          </script>

        </div>
      </main>
